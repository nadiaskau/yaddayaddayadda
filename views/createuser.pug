extends layout
block head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/login_createUser.css')
block content
    div(class="largeLogo")
        img(src="../images/logo.png")
        p(class="largeLogoText") YaddaYaddaYadda

    div(class="flexParent" id="createUserContainer")
        form(method="post" action="" enctype="multipart/form-data" class="flexParent" id="createUserForm")
            input(type="text", name="name" placeholder="Name" class="inputLarge" required)
            input(type="email", name="email" placeholder="Email" class="inputLarge" required)
            input(type="password", name="password" class="inputLarge" placeholder="Password" required)
            input(type="password", name="passwordRepeat" placeholder="Repeat password" class="inputLarge" required)
            input(type="file", name="avatar" accept=".png, .jpeg, .jpg" required)
            input(type="submit", value="Create user" class="button" id="createUserButton")
